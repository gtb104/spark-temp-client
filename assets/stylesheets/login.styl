.login
  position: relative
  width: 20em
  background: $login-background-color
  padding: 1em

  button
    margin-top: 10px

  .arrow-up
    position: absolute
    top: -1em
    right: 1em
    width: 0
    height: 0
    border-left: 1em solid transparent
    border-right: 1em solid transparent
    border-bottom: 1em solid $login-background-color

  .status
    position: relative
    top: 5px
    margin-left: 5px

  .error
    position: relative
    top: 0.55em
    margin-left: 30px